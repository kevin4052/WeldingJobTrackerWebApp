@model IEnumerable<Project>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="jumbotron">
    <div class="container">
        <h3 class="display-3">Projects List</h3>
        <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        <p><a asp-controller="Project" asp-action="Create" type="button" class="btn btn-primary">Create</a></p>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Project ID</th>
            <th scope="col">Name</th>
            @* <th scope="col">Client</th> *@
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                @* <td>@item.Client.Name</td> *@
                <td>
                    <a asp-controller="Project" asp-action="Detail" asp-route-id="@item?.Id" type="button" class="btn btn-primary">View</a>
                </td>
            </tr>            
        }
    </tbody>
</table>
